        float base;
        float ireducido = 0.10f;
        float igeneral = 0.21f;
        float iva = 0.0f;
        boolean codigopromocional = true;

        Scanner lector = new Scanner(System.in);
        System.out.println("Introduzca su precio.");
        base = lector.nextInt(); //VALOR BASE
        Scanner siva = new Scanner(System.in);
        System.out.println("Tipo de IVA, general o reducido.");
        String tiva = siva.nextLine();
        if (tiva.equals("reducido")) {
            iva = ireducido;
        } else if (tiva.equals("general")) {
            iva = igeneral;
        } //VALOR IVA
         Scanner scodigopromocional = new Scanner(System.in);
        System.out.println("¿Código promocional?");
        String respuesta = scodigopromocional.nextLine();
        if (respuesta.equals("si")) {
            codigopromocional = true;
        } else if (respuesta.equals("no")) {
            codigopromocional = false;
        }//VALOR CODIGO
        System.out.println("Base imponible, " + base);
        base = (base*iva)+base;
        System.out.println("Precio con IVA, " + base);
        base = base / (codigopromocional ? 2f : 1f);
        System.out.println("Con código promocional, " + base);



